Gem::Specification.new do |s|
  s.name = 'omah_search'
  s.version = '0.2.1'
  s.summary = 'Searches the email headers from the Offine Mail Helper (OMAH) database generated by the omah-plugin-sqlite.'
  s.authors = ['James Robertson']
  s.files = Dir['lib/omah_search.rb']
  s.add_runtime_dependency('dynarex', '~> 1.7', '>=1.7.9')
  s.add_runtime_dependency('recordx_sqlite', '~> 0.2', '>=0.2.0')
  s.signing_key = '../privatekeys/omah_search.pem'
  s.cert_chain  = ['gem-public_cert.pem']
  s.license = 'MIT'
  s.email = 'james@r0bertson.co.uk'
  s.homepage = 'https://github.com/jrobertson/omah_search'
end
